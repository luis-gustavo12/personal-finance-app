{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "sourceMap": true
  },
  "scripts": {
    "build-ts": "tsc",
    "build-webpack": "webpack"
  },
  "include": [
    "./**/*.ts",
    "./**/*.js"
  ],
  "exclude": [
    "node_modules",
    "./dist"
  ]
}